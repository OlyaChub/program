<main class="p-3">
    {{#with heading}}
    <div class="card">
        <div class="card-body">
            {{#with main}}
            <h1 class="text-capitalize">{{title}}</h1>
            <div class="text-muted">{{text}}</div>
            {{/with}}
            <br>
            {{#with main.button_text}}
            <button class="btn btn-primary">{{solid}}</button><br><br>
            <button class="btn btn-outline-primary">{{outline}}</button>
            {{/with}}
        </div>
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with second}}
            <h2 class="text-capitalize">{{title}}</h2>
            <div class="text-muted">{{text}}</div>
            {{/with}}
            <br>
            {{#with second.button_text}}
            <button class="btn btn-secondary">{{solid}}</button><br><br>
            <button class="btn btn-outline-secondary">{{outline}}</button>
            {{/with}}
        </div>
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with subblock}}
            <h3 class="text-capitalize">{{title}}</h3>
            <div class="text-muted">{{text}}</div>
            {{/with}}
            <br>
            {{#with subblock.button_text}}
            <button class="btn btn-dark">{{solid}}</button><br><br>
            <button class="btn btn-outline-dark">{{outline}}</button>
            {{/with}}
        </div>
    </div>
    {{/with}}
    <br>
    <br>
    {{#with nested_display}}
    <div class="card">
        <div class="card-body">
            <div class="display-1">{{title}}</div><br>
            <div class="card">
                <div class="card-body">
                    {{#with children_display}}
                    <div class="display-4">{{title}}</div><br>
                    <div class="text-muted">{{text}}</div>
                    {{/with}}
                    <br>
                    {{#with children_display.button}}
                    <button class="btn btn-outline-warning">{{text}}</button>
                    {{/with}}
                </div>
            </div>
            <br>
            <h6 class="text-capitalize">{{header_text}}</h6><br>
            {{#with button}}
            <button class="btn btn-info">{{text}}</button>
            {{/with}}
        </div>
    </div>
    {{/with}}
    <br>
    <br>
    {{#with paragraph}}
    <div class="card">
        <div class="card-body">
            <div class="text-uppercase">{{title}}</div>
            <div class="text-muted">{{text}}</div><br>
            {{#with button}}
            <div class="text-muted">{{text}}</div>
            <div href="#" class="btn btn-link">{{url}}</div>
            {{/with}}
            <br>
            <div class="card">
                <div class="card-body">
                    {{#each list_name}}
                    <div class="text-muted">{{text}}</div>
                    <div href="#" class="btn btn-link">{{url}}</div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/with}}

</main>