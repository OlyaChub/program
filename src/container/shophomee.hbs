<main class="p-2">
    <section>
        {{> shoppost}}
    </section>
    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="row">
            <div class="col-12 mb-5">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        {{#if isActive}}
                        <a class="nav-link active">{{text}}</a>
                        {{else}}
                        {{#if isDisabled}}
                        <a class="nav-link disabled">{{text}}</a>
                        {{else}}
                        <a class="nav-link">{{text}}</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="row gx-2 gy-2">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body">
                        <div>
                            <h6 class="card-title">{{title}}</h6>
                            <span class="badge text-bg-success rounded-pill text-uppercase">{{#if
                                isHot}}Hot{{/if}}</span>
                            <span class="badge text-bg-danger rounded-pill text-uppercase">{{#if
                                isNew}}New{{/if}}</span>
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
    </section>

    <hr>
    {{> subscribe}}
    <hr>
    <section>
        {{> shopaction}}
    </section>
    <hr>
</main>