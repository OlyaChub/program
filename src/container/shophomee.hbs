<main class="p-2">
    {{#with newsBlock}}
    <h2 class="text-center">{{title}}</h2>
    <div class="row gx-4 gy-4">
        {{#each cards}}
        <div class="col-3">
            <div class="card text-bg-secondary" class="mb-5">
                <div class="card-header">{{title}} <span class="badge text-bg-success rounded-pill text-uppercase">{{#if
                        isTop}}Top{{/if}}</span>
                    <span class="badge text-bg-danger rounded-pill text-uppercase">{{#if isNew}}New{{/if}}</span>
                </div>
                <div class="card-body">
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr class="my-5">

    <section>
        {{#with goodsBlock}}
        <div class="row">
            <div class="col-12 mb-5">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        {{#if isActive}}
                        <a class="nav-link active">{{text}}</a>
                        {{else}}
                        {{#if isDisabled}}
                        <a class="nav-link disabled">{{text}}</a>
                        {{else}}
                        <a class="nav-link">{{text}}</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="row gx-2 gy-2">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body">
                        <div>
                            <h6 class="card-title">{{title}}</h6>
                            <span class="badge text-bg-success rounded-pill text-uppercase">{{#if
                                isHot}}Hot{{/if}}</span>
                            <span class="badge text-bg-danger rounded-pill text-uppercase">{{#if
                                isNew}}New{{/if}}</span>
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
    </section>

    <hr>
    {{#with subscribe}}
    <div class="alert alert-dark">
        <div class="col-6">
            <h2 class="mb-2">{{header}}</h2>
            {{#each buttons}}
            <button class="btn btn-primary" class="text-end"><a href="{{link}}" class="nav-link">{{text}}</a></button>
            {{/each}}
        </div>
        <p class="m-0">{{description}}</p>
    </div>
    {{/with}}
    <hr>
    <section>
        {{> shopaction}}
    </section>
    <hr>


</main>