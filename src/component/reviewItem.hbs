{{#each reviewList}}
<div class="card my-3">
    <div class="card-body">
        {{#with title}}
        <div class="card">
            <div class="card-body">
                <h6>{{userName}}</h6>
                <p>{{caption}}</p>
                <p>{{date}}</p>
                {{/with}}
                <hr>
                {{#with reviewBody}}
                {{#with seller}}
                <p>{{title}}: {{value}}</p>
                {{/with}}
                {{#with rating}}
                <p>{{title}}: {{value}}</p>
                {{/with}}
                {{#each text}}
                <p>{{this}}</p>
                {{/each}}
                {{#with advantages}}
                <h6>{{title}}:</h6>
                <p>{{text}}</p>
                {{/with}}
                {{#with disadvantages}}
                <h6>{{title}}:</h6>
                <p>{{text}}</p>
                {{/with}}
                <div class="row">
                    {{#each images}}
                    <div class="col-3">
                        <img class="card-img-top" src="{{this}}">
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
        <br>
        {{#each coments}}
        <div class="card ms-5 my-3">
            <div class="card-body">
                <h6>{{userName}}</h6>
                <p>{{date}}</p>
                <p>{{text}}</p>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>
</div>
{{/each}}