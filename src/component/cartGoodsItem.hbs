{{#each goodsBlock}}
<div class="card mb-2 p-1">
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <img class="card-img-top" src="{{image}}">
            </div>
            <div class="col-2">
                <h6>{{name}}</h6>
                <p>{{description}}</p>
            </div>
            {{#with price}}
            <div class="col-2">
                <p>{{title}}:{{value}}</p>
            </div>
            {{/with}}
            <div class="col-2">
                {{amount}}
            </div>
            {{#each buttons}}
            <div class="col-2 pb-1">
                {{#if isPrimary}} <button class="btn text-bg-primary">{{text}}</button> {{/if}}
                {{#if isDanger}} <button class="btn btn-outline-danger">{{text}}</button> {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/each}}