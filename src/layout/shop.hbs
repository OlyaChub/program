{{!--
Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

<head>
    <title>
        {{page.title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>

<body class="p-2">
    {{#with navigation}}
    <div class="card">
        <div class="nav">
            <div class="col-4">
                <h3>{{Logo}}</h3>
            </div>
            {{#each links}}
            <div class="ms-5" class="nav-item">
                <a href="{{href}}" class="nav-link">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}

    {{! ↓ ця кострукція показує куди шаблонізатору треба вставляти код з container файлу --}}
    {{{body}}}

    <div class="p-2 mb-5 g-4">
        {{#each footer}}
        <div class="row">
            {{#each this}}
            <div class="col-3">
                <div class="text-primary" class="nav-item" class="p-3">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>