{{!--
Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

<head>
    <title>
        {{page.title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>

<body class="p-2">

    <header>
        {{#with navigation}}
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body d-flex justify-content-between">
                        <h3>{{Logo}}</h3>
                        <div class="nav d-flex aligh-items-center">
                            {{#each links}}
                            <div class="nav-item">
                                <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{href}}">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </header>

    {{! ↓ ця кострукція показує куди шаблонізатору треба вставляти код з container файлу --}}
    {{{body}}}

    <div class="row mb-5 g-4">
        {{#each footer}}
        <div class="col-2 p-3">
            <ul class="nav">
                {{#each this}}
                <li>
                    <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{/each}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>